{% sw_extends "storefront/layout/header/logo.html.twig" %}

{% block layout_header_logo_image_tablet %}
    {{ parent() }}

    <source srcset="{{ shopware.theme['sw-logo-tablet'] | frosh_webp_url |sw_encode_url }}"
            media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)" type="image/webp">
{% endblock %}

{% block layout_header_logo_image_mobile %}
    {{ parent() }}

    <source srcset="{{ shopware.theme['sw-logo-mobile'] | frosh_webp_url |sw_encode_url }}"
            media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)" type="image/webp">
{% endblock %}

{% block layout_header_logo_image_default %}
    <source srcset="{{ shopware.theme['sw-logo-desktop'] | frosh_webp_url |sw_encode_url }}" type="image/webp">

    {{ parent() }}
{% endblock %}
